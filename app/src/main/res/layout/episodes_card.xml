<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/episodes_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_margin="1dp"
        android:elevation="3dp"
        android:focusableInTouchMode="false"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/episodes_thumbnail"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/episodes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/episodes_thumbnail"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />



            <ImageButton
                android:id="@+id/episodes_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/episodes_title"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                card_view:srcCompat="@android:drawable/stat_sys_download" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
